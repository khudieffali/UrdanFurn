    @page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="login-register-area pb-100 pt-95">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 offset-lg-2">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> login </h4>
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form id="account" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="Input.UserName" placeholder="Email">
                                        <input asp-for="Input.Password" placeholder="Password">
                                        <div class="login-toggle-btn">
                                            <input asp-for="Input.RememberMe" type="checkbox">
                                            <label>Remember me</label>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                                        </div>
                                        <div class="pt-3">
                                            <p>
                                                <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                            </p>
                                            <p>
                                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                            </p>
                                        </div>
                                        <div class="button-box btn-hover">
                                            <button id="login-submit" type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
