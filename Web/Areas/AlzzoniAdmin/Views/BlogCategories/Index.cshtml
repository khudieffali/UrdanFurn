@model IEnumerable<Entities.BlogCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myBlogCat">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogCategoryIcon)"
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogCategoryName)
            </td>
            <td>
                <img width="80" class="img-fluid" src="@Html.DisplayFor(modelItem => item.BlogCategoryIcon)" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Script{
    <script>
        $(document).ready( function () {
    $('#myBlogCat').DataTable();
     } );
    </script>
}