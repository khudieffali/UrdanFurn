@model IEnumerable<Entities.Product>

@{
    ViewData["Title"] = "Index";
    ViewData["Link"] = "Məhsullar";
}

<h1>Məhsullar</h1>

<p>
    <a asp-action="Create" style="color:blue;font-size:20px">Yarat +</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @{
                    string photoUrl=PictureHelper.getCoverPhoto(item.CoverPhotoId,item.ProductPictures);
                 }
                <img src="@photoUrl" width="70"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" style="color:white">Dəyiş</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" style="color:white">Detallar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="color:white">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Script{
    <script>
        $(document).ready( function () {
    $('#myTable').DataTable();
     } );
    </script>
}