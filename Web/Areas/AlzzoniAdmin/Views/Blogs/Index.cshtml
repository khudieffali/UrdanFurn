@model IEnumerable<Entities.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myBlog">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogPhoto)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.BlogDate)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.BlogCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogTitle)
            </td>
            <td>
                <img width="80" src="@Html.DisplayFor(modelItem => item.BlogPhoto)"/>
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.BlogDate)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.BlogCategory.BlogCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Script{
    <script>
        $(document).ready( function () {
    $('#myBlog').DataTable();
     } );
    </script>
}