                <i class="fas fa-chair"></i>
                <i class="fas fa-bed"></i>
            </div>
            <input asp-for="IconUrl" type="hidden" />
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
